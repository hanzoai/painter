# Hanzo Painter - AI-Powered Video Inpainting Configuration
# Copy this file to .env and adjust values as needed

# ComfyUI settings
COMFYUI_DIR=./ComfyUI
COMFYUI_HOST=0.0.0.0
COMFYUI_PORT=8188

# Python settings
PYTHON=python3
PIP=pip3

# Processing defaults
DEFAULT_FRAME_RATE=8
DEFAULT_VIDEO_LENGTH=50
DEFAULT_FRAME_LOAD_CAP=300
DEFAULT_GUIDANCE_SCALE=10
DEFAULT_NUM_INFERENCE_STEPS=15

# Model settings
SAM2_MODEL=sam2_hiera_large.pt  # Options: sam2_hiera_large.pt, sam2_hiera_base_plus.pt
BASE_MODEL=realisticVisionV51_v51VAE.safetensors
DIFFUERASER_MODEL=pcm_sd15_smallcfg_2step_converted.safetensors

# Performance settings
LOW_VRAM=false
CPU_ONLY=false
GPU_DEVICE=0

# MLX settings (Apple Silicon only)
ENABLE_MLX=true                  # Enable MLX acceleration (Mac M1/M2/M3/M4)
MLX_MEMORY_LIMIT=0               # MLX memory limit in GB (0 = auto)

# Advanced settings
MASK_DILATION_ITER=4
REF_STRIDE=10
NEIGHBOR_LENGTH=10
SUBVIDEO_LENGTH=50

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Model download URLs (optional - override if needed)
# SAM2_LARGE_URL=https://dl.fbaipublicfiles.com/segment_anything_2/072824/sam2_hiera_large.pt
# SAM2_BASE_URL=https://dl.fbaipublicfiles.com/segment_anything_2/072824/sam2_hiera_base_plus.pt
